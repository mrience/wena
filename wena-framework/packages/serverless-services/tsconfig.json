{
  "compilerOptions": {
      "target": "es2020",
      "module": "ES2022",
      "moduleResolution": "node",
      "declaration": true,
      "strict": true,
      "incremental": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "composite": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "types": ["node", "jest"],
  },
  "include": ["src/**/*"]
}