{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "incremental": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "types": ["node", "jest"],
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "allowJs": true
    },
    "ts-node": {
        "esm": true
    },
    "exclude": ["node_modules"]
}