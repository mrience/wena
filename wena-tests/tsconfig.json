    "target": "es5",
    "module": "commonjs",
    "lib": ["ES6"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,                           
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "excludeDirectories": ["node_modules"]
}
