{
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "ES2022",
        "module": "ES2022",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,    
        "skipLibCheck": true,
        "types": ["node"],
        "isolatedModules": true,
        "allowImportingTsExtensions": true,
        "moduleResolution": "Node"
    },
    "include": [
        "src/*"
      ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/*",
      ]
}